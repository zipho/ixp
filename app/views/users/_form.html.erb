<%= form_with(model: user, url: register_url) do |form| %>
  <% if user.errors.any? %>
    <div role="alert">
      <div class="bg-red-500 text-white font-bold rounded-t px-4 py-2">
        <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
      </div>
      <div class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700">
        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "block border border-grey-light w-full p-3 rounded mb-4"  %>
  </div>
  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "block border border-grey-light w-full p-3 rounded mb-4"  %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, class: "block border border-grey-light w-full p-3 rounded mb-4"  %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password, class: "block border border-grey-light w-full p-3 rounded mb-4" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, class: "block border border-grey-light w-full p-3 rounded mb-4" %>
  </div>

  <%= form.submit "Sign Up", class: "w-full text-center py-3 rounded bg-indigo-600 text-white hover:bg-green-dark focus:outline-none" %>
<% end %>
