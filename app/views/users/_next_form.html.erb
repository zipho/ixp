<%= form_with(model: user, action: :patch, url: step2_path) do |form| %>
  <% if user.errors.any? %>
    <div role="alert">
      <div class="bg-red-500 text-white font-bold rounded-t px-4 py-2">
        <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
      </div>
      <div class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700">
        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>

  <div class="field">
    <%= form.label :birthday %>
    <%= form.date_field :birthday, class: "block border border-grey-light w-full p-3 rounded mb-4"  %>
  </div>
  <div class="field">
    <%= form.label :gender %>
    <%= form.select(:gender, [['Male', 0], ['Female', 1], ['Non-Binary', 2]], {}, class: "block border border-grey-light w-full p-3 rounded mb-4") %>
  </div>

  <%= form.submit "Save", class: "w-full text-center py-3 rounded bg-indigo-600 text-white hover:bg-green-dark focus:outline-none" %>
<% end %>
